<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/email_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_large"
        android:background="@color/accent_transparent"
        android:gravity="center"
        android:paddingBottom="@dimen/spacing_huge"
        android:paddingEnd="@dimen/spacing_tiny"
        android:paddingStart="@dimen/spacing_tiny"
        android:paddingTop="@dimen/spacing_huge"
        android:textSize="@dimen/text_size_huge"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:padding="@dimen/spacing_large">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/spacing_large"
            android:layout_weight="1"
            android:background="@android:color/black"
            android:padding="@dimen/spacing_standard">

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:mrl_rippleOverlay="true">

                <ImageView
                    android:id="@+id/change_email_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/image_view_description"
                    android:cropToPadding="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ibutton_ezreal"/>
            </com.balysv.materialripple.MaterialRippleLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/black_transparent"
                android:gravity="center"
                android:padding="@dimen/spacing_standard"
                android:text="@string/ma_change_email"
                android:textSize="@dimen/text_size_massive"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/black"
            android:padding="@dimen/spacing_standard">

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:mrl_rippleOverlay="true">

                <ImageView
                    android:id="@+id/change_password_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/image_view_description"
                    android:cropToPadding="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ibutton_galio"/>
            </com.balysv.materialripple.MaterialRippleLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/black_transparent"
                android:gravity="center"
                android:padding="@dimen/spacing_standard"
                android:text="@string/ma_change_password"
                android:textSize="@dimen/text_size_massive"/>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:paddingBottom="@dimen/spacing_large"
        android:paddingEnd="@dimen/spacing_large"
        android:paddingStart="@dimen/spacing_large">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/spacing_large"
            android:layout_weight="1"
            android:background="@android:color/black"
            android:padding="@dimen/spacing_standard">

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:mrl_rippleOverlay="true">

                <ImageView
                    android:id="@+id/license_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/image_view_description"
                    android:cropToPadding="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ibutton_jayce"/>
            </com.balysv.materialripple.MaterialRippleLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/black_transparent"
                android:gravity="center"
                android:padding="@dimen/spacing_standard"
                android:text="@string/ma_licenses"
                android:textSize="@dimen/text_size_massive"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/black"
            android:padding="@dimen/spacing_standard">

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:mrl_rippleOverlay="true">

                <ImageView
                    android:id="@+id/sign_out_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/image_view_description"
                    android:cropToPadding="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ibutton_vi"/>
            </com.balysv.materialripple.MaterialRippleLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/black_transparent"
                android:gravity="center"
                android:padding="@dimen/spacing_standard"
                android:text="@string/ma_sign_out"
                android:textSize="@dimen/text_size_massive"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>

