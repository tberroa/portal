<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/filter_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/top_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/image_view_description"
                android:src="@drawable/ic_pos_top"/>

            <ImageView
                android:id="@+id/jungle_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/image_view_description"
                android:src="@drawable/ic_pos_jungle"/>

            <ImageView
                android:id="@+id/mid_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/image_view_description"
                android:src="@drawable/ic_pos_mid"/>

            <ImageView
                android:id="@+id/bot_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/image_view_description"
                android:src="@drawable/ic_pos_bot"/>

            <ImageView
                android:id="@+id/support_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/image_view_description"
                android:src="@drawable/ic_pos_support"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/top_check"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/image_view_description"
                android:src="@drawable/ic_check"/>

            <ImageView
                android:id="@+id/jungle_check"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/image_view_description"
                android:src="@drawable/ic_check"/>

            <ImageView
                android:id="@+id/mid_check"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/image_view_description"
                android:src="@drawable/ic_check"/>

            <ImageView
                android:id="@+id/bot_check"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/image_view_description"
                android:src="@drawable/ic_check"/>

            <ImageView
                android:id="@+id/support_check"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/image_view_description"
                android:src="@drawable/ic_check"/>
        </LinearLayout>
    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:fadeScrollbars="true"
        android:paddingEnd="2dp"
        android:paddingStart="2dp"
        android:scrollbars="vertical"/>

    <Button
        android:id="@+id/go_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/accent"
        android:text="@string/button_go"
        android:textSize="20sp"/>
</LinearLayout>
