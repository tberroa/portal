<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/primary_background"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_transparent"
        android:gravity="bottom"/>

    <ImageView
        android:id="@+id/user_profile_icon_view"
        android:layout_width="@dimen/profile_icon_side"
        android:layout_height="@dimen/profile_icon_side"
        android:layout_gravity="bottom|center_horizontal"
        android:contentDescription="@string/image_view_description"/>

    <TextView
        android:id="@+id/user_summoner_name_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/black_transparent"
        android:gravity="center"
        android:paddingBottom="@dimen/spacing_tiny"
        android:paddingEnd="@dimen/drawer_name_spacing"
        android:paddingStart="@dimen/drawer_name_spacing"
        android:textSize="@dimen/text_size_huge"/>
</FrameLayout>
