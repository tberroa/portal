<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_standard"
        android:layout_marginEnd="@dimen/spacing_huge"
        android:layout_marginStart="@dimen/spacing_huge"
        android:layout_marginTop="@dimen/spacing_standard"
        android:background="@drawable/bg_overlay_white"
        android:gravity="center"
        android:paddingBottom="@dimen/spacing_tiny"
        android:paddingEnd="@dimen/spacing_standard"
        android:paddingStart="@dimen/spacing_standard"
        android:paddingTop="@dimen/spacing_tiny">

        <TextView
            android:id="@+id/victory_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/gwf_victory"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_size_small"/>

        <TextView
            android:id="@+id/defeat_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/gwf_defeat"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_small"/>

        <TextView
            android:id="@+id/team_kda_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/text_size_small"/>

        <TextView
            android:id="@+id/match_duration_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/text_size_small"/>

        <TextView
            android:id="@+id/match_date_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/text_size_small"/>
    </LinearLayout>

    <include
        android:id="@+id/summoner_1_layout"
        layout="@layout/element_summoner_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/spacing_standard"
        android:layout_marginEnd="@dimen/spacing_huge"
        android:layout_marginStart="@dimen/spacing_huge"
        android:layout_weight="18"/>

    <include
        android:id="@+id/summoner_2_layout"
        layout="@layout/element_summoner_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/spacing_standard"
        android:layout_marginEnd="@dimen/spacing_huge"
        android:layout_marginStart="@dimen/spacing_huge"
        android:layout_weight="18"/>

    <include
        android:id="@+id/summoner_3_layout"
        layout="@layout/element_summoner_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/spacing_standard"
        android:layout_marginEnd="@dimen/spacing_huge"
        android:layout_marginStart="@dimen/spacing_huge"
        android:layout_weight="18"/>

    <include
        android:id="@+id/summoner_4_layout"
        layout="@layout/element_summoner_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/spacing_standard"
        android:layout_marginEnd="@dimen/spacing_huge"
        android:layout_marginStart="@dimen/spacing_huge"
        android:layout_weight="18"/>

    <include
        android:id="@+id/summoner_5_layout"
        layout="@layout/element_summoner_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/spacing_standard"
        android:layout_marginEnd="@dimen/spacing_huge"
        android:layout_marginStart="@dimen/spacing_huge"
        android:layout_weight="18"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@color/primary_background"
        android:baselineAligned="false">

        <com.balysv.materialripple.MaterialRippleLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:mrl_rippleColor="@color/white"
            app:mrl_rippleDuration="250"
            app:mrl_rippleFadeDuration="25"
            app:mrl_rippleOverlay="true"
            app:mrl_rippleRoundedCorners="@dimen/radius_large">

            <ImageView
                android:id="@+id/income_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/image_view_description"
                android:padding="@dimen/spacing_standard"
                android:src="@drawable/ic_income"/>
        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:mrl_rippleColor="@color/white"
            app:mrl_rippleDuration="250"
            app:mrl_rippleFadeDuration="25"
            app:mrl_rippleOverlay="true"
            app:mrl_rippleRoundedCorners="@dimen/radius_large">

            <ImageView
                android:id="@+id/offense_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/image_view_description"
                android:padding="@dimen/spacing_standard"
                android:src="@drawable/ic_offense"/>
        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:mrl_rippleColor="@color/white"
            app:mrl_rippleDuration="250"
            app:mrl_rippleFadeDuration="25"
            app:mrl_rippleOverlay="true"
            app:mrl_rippleRoundedCorners="@dimen/radius_large">

            <ImageView
                android:id="@+id/utility_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/image_view_description"
                android:padding="@dimen/spacing_tiny"
                android:src="@drawable/ic_utility"/>
        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:mrl_rippleColor="@color/white"
            app:mrl_rippleDuration="250"
            app:mrl_rippleFadeDuration="25"
            app:mrl_rippleOverlay="true"
            app:mrl_rippleRoundedCorners="@dimen/radius_large">

            <ImageView
                android:id="@+id/vision_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/image_view_description"
                android:padding="@dimen/spacing_tiny"
                android:src="@drawable/ic_vision"/>
        </com.balysv.materialripple.MaterialRippleLayout>
    </LinearLayout>
</LinearLayout>

