<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/victory_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/gwf_victory"
        android:textColor="@color/blue"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/defeat_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/gwf_defeat"
        android:textColor="@color/red"
        android:textSize="30sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/team_kda_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"/>

        <TextView
            android:id="@+id/match_duration_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <GridLayout
        android:id="@+id/summoner_table_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:orientation="vertical"/>

    <TextView
        android:id="@+id/dmg_chart_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/gwf_damage"
        android:textColor="@color/white"
        android:textSize="20sp"/>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/dmg_chart"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"/>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/kills_chart"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginBottom="-20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="-20dp"/>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/deaths_chart"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginBottom="-20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="-20dp"/>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/assists_chart"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginBottom="-20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="-20dp"/>
</LinearLayout>

