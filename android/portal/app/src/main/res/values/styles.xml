<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@null</item>
        <item name="android:colorButtonNormal">@color/accent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Dialog" parent="android:style/Theme.Holo.Dialog">
        <item name="android:layout_gravity">center</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.EditText" parent="AppTheme">
        <item name="colorControlNormal">@color/accent</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AuthBackground" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_teemo_branded</item>
    </style>

    <style name="SplashBackground" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_tristana</item>
    </style>

    <style name="HomeBackground" parent="AppTheme">
        <item name="android:windowBackground">@color/primary_background</item>
    </style>

    <style name="AccountBackground" parent="AppTheme">
        <item name="android:windowBackground">@color/primary_background</item>
    </style>

    <style name="FriendsBackground" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_annie</item>
    </style>

    <style name="RecentBackground" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_rengar</item>
    </style>

    <style name="SeasonBackground" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_jax</item>
    </style>

    <style name="WithFriendsBackground" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_akali</item>
    </style>
</resources>
