<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:paddingTop="20dp" >

    <include layout="@layout/element_legend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/legend"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

    <include layout="@layout/element_plot"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
        android:layout_below="@id/legend"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" >

        <include layout="@layout/element_gen_message"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" />

        <include layout="@layout/element_no_friends"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" />

        <include layout="@layout/element_busy_updating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>
